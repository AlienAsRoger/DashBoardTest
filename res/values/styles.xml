<resources>
    <style name="ActionBarCompatBackground" parent="ActionBarCompat">
        <item name="android:background">@drawable/top_bar_grain</item>
    </style>

    <style name="text_shadow" parent="DefaultText">
<!--        <item name="android:typeface">normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>-->
    </style>


    <style name="button_grey" parent="text_shadow">
        <item name="android:background">@drawable/button_grey_selector</item>
        <item name="android:layout_margin">4dip</item>

    </style>

    <style name="button_green" parent="text_shadow">
        <item name="android:background">@drawable/button_green_selector</item>
        <item name="android:layout_margin">4dip</item>

    </style>

<!--    <style name="small_button_orange" parent="text_shadow">
        <item name="android:background">@drawable/button_grey_small_selector</item>
        <item name="android:textColor">@android:color/white</item>
    </style>-->

    <style name="button_orange" parent="text_shadow">
        <item name="android:background">@drawable/button_orange_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dip</item>
    </style>
    <!--     <item name="android:layout_height">@dimen/default_button_height</item> -->

 <!--   <style name="button_grey" parent="button_orange">
        <item name="android:background">@drawable/button_grey_selector</item>
    </style>-->

    <style name="signin_button" parent="button_orange">
        <item name="android:textSize">19sp</item>
    </style>
<!--
    <style name="f_button_login" parent="signin_button">
        <item name="android:background">@drawable/button_f_login_selector</item>
    </style>-->

    <style name="custom_edit_field">
        <item name="android:typeface">normal</item>
        <item name="android:paddingLeft">14dip</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_pressed" parent="text_shadow">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/pressed_text_size</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="DashboardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/top_bar_1</item>
        <item name="android:background">@drawable/dashboard_button</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="MyDashboardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/top_bar_1</item>
        <item name="android:background">@drawable/dashboard_button</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DashboardItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/dashboard_item</item>
    </style>


    <style name="DashboardItemText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultEdt" parent="@android:style/Widget.EditText">
        <!--<item name="android:background">@drawable/textfield_selector</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DefaultText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="spinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:layout_margin">2dip</item>
        <item name="android:drawSelectorOnTop">true</item>
        <!--<item name="android:background">@drawable/spinner_background</item>-->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black_selector</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="spinnerStyleDropDown" parent="@android:style/Widget.Spinner.DropDown">
    </style>
</resources>