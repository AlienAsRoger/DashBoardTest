<resources>
    <style name="ActionBarCompatBackground" parent="ActionBarCompat">
        <item name="android:background">@drawable/top_bar_grain</item>
    </style>

    <style name="button_grey" parent="button_orange">
        <item name="android:background">@drawable/button_grey_selector</item>
    </style>

    <style name="button_green" parent="button_orange">
        <item name="android:background">@drawable/button_green_selector</item>
    </style>

    <style name="button_orange" parent="DefaultText">
        <item name="android:background">@drawable/button_orange_selector</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
		<item name="android:paddingLeft">16dip</item>
		<item name="android:paddingRight">16dip</item>
		<item name="android:paddingTop">1dip</item>
		<item name="android:paddingBottom">1dip</item>
		<item name="android:layout_marginTop">2dip</item>
		<item name="android:layout_marginBottom">2dip</item>
    </style>
    <!--     <item name="android:layout_height">@dimen/default_button_height</item> -->


    <style name="signin_button" parent="button_orange">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="custom_edit_field">
        <item name="android:typeface">normal</item>
        <item name="android:paddingLeft">14dip</item>
        <item name="android:paddingTop">0dip</item>
        <item name="android:paddingBottom">0dip</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_pressed" parent="DefaultText">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/pressed_text_size</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="DashboardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/top_bar_1</item>
        <item name="android:background">@drawable/dashboard_button</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="MyDashboardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/top_bar_1</item>
        <item name="android:background">@drawable/dashboard_button</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DashboardItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--<item name="android:background">@drawable/dashboard_item</item>-->
    </style>


    <style name="DashboardItemText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DefaultEdt">    <!--parent="@android:style/Widget.EditText"-->
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:background">@drawable/textfield_selector</item>
		<item name="android:textSize">17sp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:minHeight">@dimen/default_field_height</item>
        <item name="android:paddingBottom">7dip</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textColorHint">@color/green_button</item>
		<item name="android:layout_marginTop">2dip</item>
		<item name="android:layout_marginBottom">2dip</item>
    </style>
<!--    <item name="android:paddingBottom">1dip</item>-->

    <style name="DefaultText" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="spinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:layout_margin">2dip</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:selectable">true</item>
		<item name="android:layout_marginTop">2dip</item>
		<item name="android:layout_marginBottom">2dip</item>
    </style>

    <style name="spinnerStyleDropDown" parent="DefaultText">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="spinnerText" parent="DefaultText">
        <item name="android:textColor">@color/hint_text</item>
    </style>
    <style name="check_Box" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_selector</item>
		<item name="android:layout_marginTop">2dip</item>
		<item name="android:layout_marginBottom">2dip</item>
    </style>


    <style name="radio_Button" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_selector</item>
		<item name="android:layout_marginTop">2dip</item>
		<item name="android:layout_marginBottom">2dip</item>
    </style>

</resources>