<resources>
    <style name="ActionBarCompatBackground" parent="ActionBarCompat">
        <item name="android:background">@drawable/top_bar_grain</item>
    </style>

    <style name="text_shadow" parent="@android:style/Widget.TextView">
        <item name="android:typeface">normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/top_bar_1</item>
        <item name="android:background">@drawable/dashboard_button</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="MyDashboardButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/top_bar_1</item>
        <item name="android:background">@drawable/dashboard_button</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="DashboardItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/dashboard_item</item>
    </style>


    <style name="DashboardItemText" parent="@android:style/Widget.TextView">
        <item name="android:typeface">normal</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">3.5</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>