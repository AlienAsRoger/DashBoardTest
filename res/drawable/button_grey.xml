<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow-->
    <item
        >
        <shape android:dither="true"
            >
            <corners android:radius="@dimen/rounded_button_radius"/>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/default_stroke_width"
                    android:color="@color/stroke_shadow"/>
        </shape>
    </item>
    <!--Emboss-->
    <item
        android:right="1px"
        android:bottom="1px"
        >
        <shape android:dither="true"
            >
            <corners android:radius="@dimen/rounded_button_radius"/>
            <solid android:color="@color/emboss_grey_top_left"  />

        </shape>
    </item>
    <item
        android:left="1px"
        android:top="1px"
        android:right="1px"
        android:bottom="1px"
        >
        <shape android:dither="true"
            >
            <corners android:radius="@dimen/rounded_button_radius"/>
            <solid android:color="@color/emboss_grey_low_right"  />

        </shape>
    </item>

    <!--Button-->
    <item
        android:left="0px"
        android:top="0px"
        android:bottom="1px"
        android:right="1px"
        >

        <shape android:dither="true" >
            <gradient
                android:startColor="@color/dark_grey"
                android:endColor="@color/dark_grey"
                android:angle="270"
                />
            <stroke android:width="@dimen/default_stroke_width"
                    android:color="@color/orange_button_stroke"/>
            <corners
                android:radius="@dimen/rounded_button_radius"
                />
            <padding
                android:left="@dimen/rounded_button_padding"
                android:right="@dimen/rounded_button_padding"
                android:top="@dimen/rounded_button_padding"
                android:bottom="@dimen/rounded_button_padding"
                />
            <size android:height="@dimen/default_button_height"/>
        </shape>
    </item>

    <!--Inner shadow-->
    <!--    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px"
        >
        <shape android:dither="true">
            <corners android:radius="@dimen/rounded_button_radius"/>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/default_stroke_width"
                    android:color="@color/orange_button_stroke"/>
        </shape>
    </item>-->
</layer-list>
