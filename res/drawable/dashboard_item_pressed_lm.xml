<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item >
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <solid android:color="@color/orange" />

            <stroke
                android:width="1px"
                android:color="@color/dark_orange" />
        </shape>
    </item>
	<!--Shadows-->
	<!--top-->
	<item  >
		<shape android:dither="true" >
			<gradient
				android:startColor="@android:color/transparent"
				android:centerColor="@android:color/transparent"
				android:endColor="@color/shadow_border"
				android:angle="270"
				android:centerX="90%"
				/>
		</shape>
	</item>
	<!--right-->
	<item >
		<shape android:dither="true">
			<gradient
				android:startColor="@android:color/transparent"
				android:centerColor="@android:color/transparent"
				android:endColor="@color/shadow_border"
				android:angle="180"
				/>
		</shape>
	</item>
	<!--bottom-->
	<item >
		<shape android:dither="true">
			<gradient
				android:startColor="@android:color/transparent"
				android:centerColor="@android:color/transparent"
				android:endColor="@color/shadow_border"
				android:angle="90"
				/>
		</shape>
	</item>

</layer-list>