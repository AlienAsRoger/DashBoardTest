			android:text="Text"
			/>
		<com.chess.RoboButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Text"
			/>

		<com.chess.RoboButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Text"
			/>


		<com.chess.RoboButton
			android:layout_width="match_parent"
			android:layout_height="@dimen/default_button_height"
			android:layout_marginTop="10dip"
			android:layout_marginBottom="10dip"
			android:text="Text"
			/>

		<com.chess.RoboButton
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Text"
			/>


    </LinearLayout>
